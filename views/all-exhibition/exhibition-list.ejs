<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/space.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (exhs.length > 0) { %>
            <div class="grid">
                <% for (let exhibition of exhs) { %>
                    <article class="card space-item">

                        <header class="card__header">
                            <h1 class="space__title"><%= exhibition.name %></h1>
                        </header>

                        <div class="card__image">
                            <img src="http://decorpunk.com/wp-content/uploads/2020/01/88794-TheatriumoftheS.jpg"
                                alt="Aalto Vare campus" height= 200 px >
                        </div>

                        <div class="card__content">
                            <p class="space__description">Start Date: <%= exhibition.startDate %></p>
                        </div>
                        
                        <div class="card__content">
                            <p class="space__description">End Date: <%= exhibition.endDate %></p>
                        </div>

                        <div class="card__actions">

                            <a href="/admin/edit-exhibition/<%= exhibition._id %>?edit=true" class="btn">Edit</a>
                            
                            <form action="/admin/delete-exhibition" method="POST">
                                <input type = "hidden" value = "<%=exhibition._id%>" name = "exhId">
                                <button class="btn" type="submit">Delete</button>
                            </form>

                            <form action="/visitor-report" method="GET">
                                <button class="btn">Visitor report</button>
                            </form>

                            
                        </div>

                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Exhibitions Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>