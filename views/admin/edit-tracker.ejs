<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/space.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="/admin/<% if (editing) { %>edit-tracker<% } else { %>add-tracker<% } %>" method="POST" enctype="multipart/form-data">
            
            <div class="form-control">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" 
                value = "<% if (editing) { %><%= tracker.name %> <% } %>"
                required>
            </div>

            <div class="form-control">
                <label for="UUID">Tracker UUID</label>
                <input type="text" name="UUID" id="UUID" 
                value = "<% if (editing) { %><%= tracker.UUID %> <% } %>"
                required>
            </div>

            <% if (editing) {%> 
                <input type = "hidden" value = "<%=tracker._id%>" name = "trckId">
            <% } %> 

            <button class="btn" type="submit">
                <%if (editing){ %>Update info<% } else { %>Add Tracker<% } %> 
            </button>
            
        </form>
    </main>
<%- include('../includes/end.ejs') %>
