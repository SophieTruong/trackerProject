<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/space.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="/admin/<% if (editing) { %>edit-exhibition<% } else { %>add-exhibition<% } %>" method="POST">
            
            <div class="form-control">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" 
                value = "<% if (editing) { %> <%= exhibition.name%> <% } %>"
                required>
            </div>

            <div class="form-control">
                <label for="startDate">Start Date</label>
                <input type="date" name="startDate" id="startDate" 
                date = "<% if (editing) { %><%=exhibition.startDate%> <% } %>"
                required>
            </div>

            <div class="form-control">
                <label for="endDate">End Date</label>
                <input type="date" name="endDate" id="endDate" 
                date = "<% if (editing) { %><%exhibition.name%> <% } %>"
                required>
            </div>

            <% if (editing) {%> 
                <input type = "hidden" value = "<%=exhibition._id%>" name = "exhId">
            <% } %> 

            <button class="btn" type="submit">
                <%if (editing){ %>Update info<% } else { %>Add Exhibition<% } %> 
            </button>

        </form>
    </main>
<%- include('../includes/end.ejs') %>