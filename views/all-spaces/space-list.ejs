<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/space.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (spcs.length > 0) { %>
            <div class="grid">
                <% for (let space of spcs) { %>
                    <article class="card space-item">
                        
                        <header class="card__header">
                            <h1 class="space__title"><%= space.spaceName %></h1>
                        </header>

                        <div class="card__image">
                            <img src="<%= space.imageUrl %>"
                                height= 200 px >
                        </div>

                        <div class="card__actions">

                            <a href="/admin/edit-space/<%= space._id%>?edit=true" class="btn">Edit</a>
                            
                            <form action="/admin/delete-space" method="POST">
                                <input type = "hidden" value = "<%=space._id%>" name = "spcID">
                                <button class="btn" type="submit">Delete</button>
                            </form>
                               
                            <form action="/spaces/add-to-exhibition" method="POST">
                                <input type = "hidden" value = "<%=space._id%>" name = "spcID">
                                <button class="btn" type="submit">Add To Exhibition</button>
                            </form>

                        </div>


                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Space Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>